import pandas as pd
from itertools import chain

max_time = 12*60

def get_mem_mb(wildcards, threads):
    return threads * 3420

def get_permute_time(wildcards, threads, attempt):
    return min(max_time, attempt*int(0.75*int(wildcards.draws)/int(threads)))

